<resources>
    <!--AppIntro-->
    <style name="AppIntroButtonStyleCompat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppIntroDefaultPadding">
        <item name="android:paddingTop">@dimen/appIntroDefaultPaddingTop</item>
        <item name="android:paddingLeft">@dimen/appIntroDefaultPaddingLeft</item>
        <item name="android:paddingRight">@dimen/appIntroDefaultPaddingRight</item>
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottom</item>
    </style>

    <style name="AppIntroDefaultPadding.Intro1">
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottomIntro1</item>
    </style>

    <style name="AppIntroDefaultPadding.Intro2">
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottomIntro2</item>
    </style>

    <style name="AppIntroDefaultHeading" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/appIntroHeadingTextSize</item>
    </style>

    <style name="AppIntroDefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--End of AppIntro-->

    <style name="AndroidImageSlider_Corner_Oval_Orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator_corner_bg</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#f60</item>
        <item name="unselected_color">#ffffff</item>
        <item name="selected_width">6dp</item>
        <item name="selected_height">6dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="AndroidImageSlider_Attractive_Rect_Blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">rect</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#30CCE5</item>
        <item name="unselected_color">#333333</item>
        <item name="selected_width">13dp</item>
        <item name="selected_height">4dp</item>
        <item name="unselected_width">13dp</item>
        <item name="unselected_height">4dp</item>
    </style>

    <style name="AndroidImageSlider_Magnifier_Oval_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#333333</item>
        <item name="unselected_color">#33000000</item>
        <item name="selected_width">8dp</item>
        <item name="selected_height">8dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogAnimationRight">
        <item name="android:windowEnterAnimation">@anim/pull_in_right</item>
        <item name="android:windowExitAnimation">@anim/push_out_right</item>
    </style>
    <style name="DialogTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="CrossImageView">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="LabelTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
    </style>

</resources>