<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Widget.SocialView" parent="android:Widget.TextView">
        <item name="hashtagColor">?colorAccent</item>
        <item name="mentionColor">?colorAccent</item>
        <item name="hyperlinkColor">?colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
        <item name="actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ToolBarThemeBackgroundActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!--<style name="TextAppearance.FontPath" parent="android:TextAppearance">
        &lt;!&ndash; Custom Attr&ndash;&gt;
        <item name="fontPath">fonts/SanFransisco-Regular.otf</item>
    </style>-->
    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <!-- Custom Attr-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Text.Standard" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:fontFamily">@font/thefont</item>
    </style>

    <style name="TextInputLayout.Standard" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:background">@drawable/et_fild</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">#B3B4B4B4</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorPrimary</item>
    </style>

    <style name="Text.Standard.OneRow" parent="Text.Standard">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Standard.Bold" parent="TextView.Bold">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="Text.Standard.Bold.OneRow" parent="Text.Standard.Bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Standard.Italic" parent="TextView.Italic">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="Text.Medium" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Title" parent="TextView.Bold">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:color">@color/grey_900</item>
    </style>

    <style name="Text.Title.Thin" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:color">@color/grey_900</item>
    </style>

    <style name="Text.Title.OneRow" parent="Text.Title">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Thin.OneRow" parent="Text.Title.Thin">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Banner" parent="TextView.Bold">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:color">@color/grey_900</item>
    </style>


    <style name="Text.Caption" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:color">@color/grey_500</item>
    </style>

    <style name="Text.Caption.OneRow" parent="Text.Caption">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Caption.Italic" parent="TextView.Italic">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:color">@color/grey_500</item>
    </style>



    <style name="clickable" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView.Regular" parent="android:Widget.TextView">
<!--        <item name="fontPath">fonts/SanFransisco-Regular.otf</item>-->
        <item name="android:color">@color/grey_900</item>
        <item name="android:fontFamily">@font/thefont</item>
    </style>

    <style name="TextView.Italic" parent="android:Widget.TextView">
<!--        <item name="fontPath">fonts/SanFrancisco-RegularItalic.otf</item>-->
        <item name="android:color">@color/grey_900</item>
