<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dimen_2dp"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:background="@drawable/indicator_corner_bg"
        android:textColor="@color/white"
        android:id="@+id/tv_date"
        android:text="HARI INI"
        style="@style/Text.Caption.Bold"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_not_read_yet"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:background="@color/blue_500"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimen_2dp">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/dimen_2dp"
            app:cardCornerRadius="@dimen/dimen_14dp"
            android:layout_centerHorizontal="true"
            app:contentPaddingLeft="@dimen/dimen_16dp"
            app:contentPaddingRight="@dimen/dimen_16dp"
            app:contentPaddingBottom="@dimen/dimen_4dp"
            app:contentPaddingTop="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_unread"
                android:text="1 Pesan Belum Terbaca"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/Text.Caption.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:background="@drawable/message_label"
        android:textColor="@color/white"
        android:id="@+id/tv_message"
        android:text="Labeled Text Here..."
        style="@style/Text.Caption.Bold"
        android:layout_margin="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>