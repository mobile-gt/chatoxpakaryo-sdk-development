<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".app.usertoken.UserTokenActivity">
    <ImageView
        android:layout_width="112dp"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dimen_56dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:src="@drawable/chato_logo" />
    <TextView
        android:layout_marginTop="@dimen/dimen_56dp"
        android:text="Selamat Datang"
        android:textStyle="bold"
        android:textColor="@color/black"
        style="@style/Text.SingleTitle.Bold"
        android:textSize="@dimen/text_excellentone"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/Text.Standard.OneRow"
        android:text="@string/ux_titleusertoken"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_token"
            android:drawableLeft="@drawable/ic_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:hint="Kode Perusahaan"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#B3B4B4B4" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:clickable="false"
        android:id="@+id/btn_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:shadowColor="@color/grey_400"
        android:background="@drawable/button_disable"
        android:text="Lanjutkan"
        android:textAllCaps="false"
        android:textColor="#fff" />

</LinearLayout>

