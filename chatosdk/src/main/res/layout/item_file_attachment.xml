<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dimen_2dp"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:background="@drawable/indicator_corner_bg"
        android:textColor="@color/white"
        android:id="@+id/tv_date"
        android:text="HARI INI"
        style="@style/Text.Caption.Bold"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_not_read_yet"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:background="@color/blue_500"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimen_2dp">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/dimen_2dp"
            app:cardCornerRadius="@dimen/dimen_14dp"
            android:layout_centerHorizontal="true"
            app:contentPaddingLeft="@dimen/dimen_16dp"
            app:contentPaddingRight="@dimen/dimen_16dp"
            app:contentPaddingBottom="@dimen/dimen_4dp"
            app:contentPaddingTop="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_unread"
                android:text="1 Pesan Belum Terbaca"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/Text.Caption.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lay_message"
        style="@style/clickable"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:id="@+id/lay_container_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"

                android:id="@+id/lay_chat"
                android:background="@drawable/bubble_r_new"
                android:backgroundTint="@color/green_400"
                android:layout_width="@dimen/chat_attachment_image_holder"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lay_forwarded"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_terusan"
                        android:scaleX="1"
                        android:tint="@color/grey_500"
                        android:src="@drawable/ic_forward"
                        android:layout_width="@dimen/dimen_12dp"
                        android:layout_height="@dimen/dimen_12dp" />
                    <TextView
                        android:id="@+id/tv_terusan"
                        style="@style/Text.Caption.Italic"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/grey_500"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:text="@string/label_forwarded"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:textStyle="bold"
                        style="@style/Text.Standard.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_bias="0.5"
                        tools:text="Ronald Perkins" />
                </LinearLayout>
                <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                    android:id="@+id/container_reply"
                    android:visibility="gone"
                    android:minWidth="@dimen/dimen_80dp"
                    style="@style/clickable"
                    android:layout_above="@+id/lay_action_attachment"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:minWidth="@dimen/dimen_108dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="4dp"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            android:background="@drawable/quote_vertical_blue_bar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/lay_reply"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:background="#59FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints">
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/img_replied_message"
                                android:layout_width="@dimen/dimen_42dp"
                                android:layout_height="@dimen/dimen_42dp" />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dimen_6dp"
                                android:layout_toRightOf="@+id/img_replied_message"
                                android:layout_toLeftOf="@+id/img_replied_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_replied_title"
                                    android:textColor="@color/colorPrimary"
                                    style="@style/Text.Standard.Bold.OneRow"
                                    android:text="Al"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_replied_message"
                                    style="@style/Text.Standard"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:text="Beginilah Beginilah Beginilah Beginilah Beginilah"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
                <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                    android:id="@+id/container_attachment"
                    style="@style/clickable"
                    android:layout_above="@+id/lay_action_attachment"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:minWidth="@dimen/dimen_108dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="4dp"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            android:background="@drawable/quote_vertical_blue_bar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                        </LinearLayout>
                        <!--style="@style/clickable"-->
                        <LinearLayout
                            android:id="@+id/lay_attachment"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:layout_marginBottom="@dimen/dimen_8dp"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:background="#59FFFFFF"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:visibility="gone"
                                    android:id="@+id/pb_download"
                                    android:layout_width="@dimen/dimen_24dp"
                                    android:layout_height="@dimen/dimen_24dp" />
                                <ImageView
                                    android:tint="@color/grey_800"
                                    android:id="@+id/img_attachment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_attachment_file"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_attachment"
                                style="@style/Text.Title.OneRow"
                                android:textColor="@color/black"
                                android:text="Contoh.pdf"
                                android:layout_marginLeft="@dimen/dimen_4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
                <RelativeLayout
                    android:id="@+id/lay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.gamatechno.chato.sdk.utils.ChatoText.ExpandableTextView
                        style="@style/Text.Standard"
                        android:id="@+id/tv_message"
                        android:textColorLink="@color/blue_500"
                        android:autoLink="phone|web"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:text="Asd asd "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="@dimen/dimen_96dp"
                    android:layout_height="wrap_content"></LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_status"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:src="@drawable/ic_star_full"
                        android:id="@+id/img_star"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp" />
                    <ImageView
                        android:id="@+id/img_broadcast"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_broadcast" />
                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        tools:text="11:45 PM" />
                    <ImageView
                        android:id="@+id/img_receipt"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_check_unread_24dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>