<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_chat_rooms"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    style="@style/clickable"
    android:layout_height="85dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/grey_300"
        android:layout_marginLeft="@dimen/dimen_72dp"
        android:layout_alignParentBottom="true"
        android:layout_height="0.3dp">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/adapter"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/lay_1"
            android:layout_width="@dimen/avatar_dimen"
            android:layout_height="@dimen/avatar_dimen">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_check"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_4dp"
                app:cardBackgroundColor="@color/blue_400"
                android:visibility="gone"
                app:cardCornerRadius="9dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp">
                <ImageView
                    android:src="@drawable/ic_check_circle_36dp"
                    android:layout_width="@dimen/dimen_18dp"
                    android:layout_height="@dimen/dimen_18dp" />
            </androidx.cardview.widget.CardView>
            <com.gamatechno.ggfw_ui.avatarview.views.AvatarView
                android:id="@+id/avatarView"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginLeft="-1dp"
                android:layout_width="@dimen/avatar_dimen"
                android:layout_height="@dimen/avatar_dimen"
                tools:ignore="MissingConstraints" />
            <androidx.cardview.widget.CardView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:layout_marginRight="@dimen/dimen_6dp"
                android:id="@+id/card_indicator"
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_12dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/grey_700"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/avatarView"
                app:layout_constraintTop_toTopOf="@+id/avatarView"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/iv_group"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:src="@drawable/ic_group_black_24dp"
                android:padding="3dp"
                android:background="@drawable/bg_circle_primary"
                app:tint="@color/white"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/avatarView"
                app:layout_constraintTop_toTopOf="@+id/avatarView"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_toLeftOf="@+id/lay_3"
            android:layout_toRightOf="@+id/lay_1"
            android:id="@+id/lay_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <com.gamatechno.chato.sdk.utils.ChatoText.EmphasisTextView.EmphasisTextView
                android:id="@+id/tv_label"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:textSize="@dimen/dimen_10dp"
                style="@style/Text.Standard.OneRow"
                android:layout_width="wrap_content"
                android:background="@drawable/filter_filled"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Grup Kerja" />
            <com.gamatechno.chato.sdk.utils.ChatoText.EmphasisTextView.EmphasisTextView
                android:id="@+id/title"
                android:layout_marginTop="@dimen/dimen_2dp"
                style="@style/Text.Title.Thin.OneRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Raline Syah Raline Syah Raline Syah Raline Syah"
                android:textColor="@color/black" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avatarView"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/img_receipt"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="@dimen/dimen_4dp"
                    android:src="@drawable/ic_check_unread_24dp"
                    android:visibility="gone" />

                <LinearLayout
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/avatarView"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_check"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        android:src="@drawable/ic_check_unread_24dp"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp" />
                    <ImageView
                        android:id="@+id/img_indicator_attachment"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        app:tint="@color/grey_500"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_camera"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp" />
                    <com.gamatechno.chato.sdk.utils.ChatoText.EmphasisTextView.EmphasisTextView
                        android:id="@+id/message"
                        style="@style/Text.Standard.OneRow"
                        android:layout_width="wrap_content"
                        android:textColor="@color/grey_500"
                        android:layout_height="wrap_content"
                        android:text="Kentis : Iya bu, baru saja saya kirim ini"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_3"
            android:paddingTop="@dimen/dimen_6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/time"
                android:layout_marginTop="@dimen/dimen_4dp"
                style="@style/Text.Caption"
                android:textSize="@dimen/dimen_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:15" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:layout_marginBottom="@dimen/dimen_1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_pinned"
                    android:visibility="gone"
                    app:tint="@color/white"
                    android:background="@drawable/bg_circle_primary"
                    android:backgroundTint="@color/grey_500"
                    android:src="@drawable/ic_pin_chat"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:padding="@dimen/dimen_3dp"/>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:id="@+id/card_tint"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/dimen_12dp">
                    <TextView
                        android:id="@+id/tint"
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/lay_1_n"
                android:layout_width="@dimen/avatar_dimen"
                android:layout_height="@dimen/avatar_dimen">
                <View
                    android:background="@drawable/circle_background_progress"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="-1dp"
                    android:layout_width="@dimen/avatar_dimen"
                    android:layout_height="@dimen/avatar_dimen"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>
            <LinearLayout
                android:layout_toRightOf="@+id/lay_1_n"
                android:id="@+id/lay_2n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.gamatechno.chato.sdk.utils.ChatoText.EmphasisTextView.EmphasisTextView
                    android:layout_marginTop="5dp"
                    style="@style/Text.Title.Thin.OneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_10dp"
                    android:background="@drawable/persegi_rounded_progress"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/avatarView"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.0">
                    <com.gamatechno.chato.sdk.utils.ChatoText.EmphasisTextView.EmphasisTextView
                        style="@style/Text.Standard.OneRow"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:textSize="@dimen/dimen_10dp"
                        android:background="@drawable/persegi_rounded_progress"
                        android:layout_width="@dimen/dimen_108dp"
                        android:textColor="@color/grey_500"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>
