<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:id="@+id/wrapper_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lay_search"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56dp">
                <ImageView
                    android:padding="@dimen/dimen_16dp"
                    android:id="@+id/img_back_search"
                    style="@style/clickable"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edt_search"
                            android:textSize="14dp"
                            android:hint="Cari Obrolan disini"
                            android:maxLines="1"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/img_clear_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:src="@drawable/ic_clear_black_24dp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:id="@+id/lay_appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/lay_items"
                            android:layout_toLeftOf="@+id/lay_items"
                            style="@style/Text.Title.Banner"
                            android:id="@+id/tv_action_title"
                            android:textSize="@dimen/dimen_20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="0"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <LinearLayout
                            android:id="@+id/lay_items"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:id="@+id/img_label"
                                android:src="@drawable/ic_label"
                                android:layout_width="@dimen/dimen_24dp"
                                android:layout_height="@dimen/dimen_24dp" />
                            <ImageView
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:tint="@color/colorPrimary"
                                android:id="@+id/img_pin"
                                android:src="@drawable/ic_pin_chat"
                                android:layout_width="@dimen/dimen_24dp"
                                android:layout_height="@dimen/dimen_24dp" />
                            <ImageView
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:id="@+id/img_delete_chat"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_delete_message"
                                android:layout_width="@dimen/dimen_24dp"
                                android:layout_height="@dimen/dimen_24dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_top"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:layout_height="wrap_content">
                    <com.gamatechno.chato.sdk.utils.SmartOfficeToolbar
                        android:id="@+id/toolbar"
                        app:title=""
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/white"
                        android:visibility="visible"
                        app:titleTextColor="@color/grey_700"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                    </com.gamatechno.chato.sdk.utils.SmartOfficeToolbar>
                </com.google.android.material.appbar.AppBarLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_gravity="bottom"
                        android:background="@color/grey_300"
                        android:orientation="vertical"
                        tools:ignore="Suspicious0dp">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
                <include layout="@layout/layout_helper"/>
            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:id="@+id/toggle_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add"
                    android:src="@drawable/ic_add"
                    android:tint="@color/white"
                    app:backgroundTint="@color/colorPrimary"
                    app:elevation="@dimen/dimen_2dp"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    app:maxImageSize="@dimen/dimen_36dp"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
    </RelativeLayout>
</LinearLayout>